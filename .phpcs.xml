<?xml version="1.0"?>
<ruleset name="Ascend">
	<description>PHP Code Sniffer configuration for Ascend theme</description>

	<!-- Include the WordPress-Extra standard. -->
	<rule ref="WordPress-Extra">
		<!-- We want flexibility on line lengths, especially for URLs and regular expressions -->
		<exclude name="Generic.Files.LineLength.TooLong"/>
	</rule>

	<!-- Include the WordPress-Docs standard. -->
	<rule ref="WordPress-Docs"/>

	<!-- Add in some custom rules. -->
	<arg name="extensions" value="php"/>

	<!-- Show progress of the check. -->
	<arg value="p"/>

	<!-- Show sniff codes in all reports. -->
	<arg value="s"/>

	<!-- Define which files to check. -->
	<file>.</file>

	<!-- Exclude node_modules, vendor, and other non-essential directories. -->
	<exclude-pattern>/vendor/</exclude-pattern>
	<exclude-pattern>/node_modules/</exclude-pattern>
	<exclude-pattern>/.git/</exclude-pattern>

	<!-- Ignore WordPress' translation functions for proper check of textdomain -->
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="ascend"/>
			</property>
		</properties>
	</rule>

	<!-- Verify that everything in the global namespace is prefixed with a theme prefix. -->
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<properties>
			<property name="prefixes" type="array">
				<element value="ascend"/>
			</property>
		</properties>
	</rule>
</ruleset>
